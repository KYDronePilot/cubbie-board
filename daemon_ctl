#!/usr/bin/env python
# For controlling the daemon that displays games.
import display_game
import sys

# Usage of this command.
USAGE = "Usage: daemon_ctl {start|stop|restart}"

# Create a daemon control object.
daemon = display_game.CubbieBoardDaemon('/tmp/cubbie-board.pid', stdout='debug/stdout.txt', stderr='debug/stderr.txt')

# If 1 arg, process it.
if len(sys.argv) == 2:
    if sys.argv[1] == 'start':
        daemon.start()
    elif sys.argv[1] == 'stop':
        daemon.stop()
    elif sys.argv[1] == 'restart':
        daemon.restart()
    else:
        print('Invalid argument')
else:
    print(USAGE)
